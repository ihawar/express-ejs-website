<div class="overflow-auto flex flex-col bg-gray-100 
    w-full mt-2 md:mt-8 h-full rounded-2xl md:rounded-3xl p-2 md:p-8">
        <!-- Filters -->
        <div class="flex justify-between">
            <input
                type="text"
                name="q"
                value="<%= filters.q %>"
                placeholder="جستوجو بر اساس آدرس IP..."
                class="w-full md:w-1/3 rounded-xl border px-4 py-2"
            />
            <p class="text-xl font-bold text-gray-700">کل بازدید ها: <%= total %></p>
        </div>

        <!-- List -->
        <div class="mt-6 space-y-3">
            <% if (visits.length === 0) { %>
                <div class="text-center text-gray-500 py-8">
                موردی یافت نشد
                </div>
            <% } %>

            <% visits.forEach(v => { %>
                <div
                class="bg-white rounded-xl text-gray-600 px-2 md:px-8 py-4
                flex justify-between items-center hover:bg-gray-200">
                    <p class="text-xl font-bold"><%= v.ip_address %></p>
                    <p class="font-sans font-semibold" dir="ltr"><%= v.user_agent.slice(0, 64) %>...</p>
                    <p class="font-sans font-semibold" dir="ltr"><%= v.url.slice(0, 64) %></p>
                    <p><%= new Date(v.date_time * 1000).toLocaleString('fa-IR') %></p>
                </div>
            <% }) %>
        </div>

        <!-- Pagination -->
        <div class="flex justify-center gap-4 mt-6 text-gray-600 font-medium">

        <% if (pagination.currentPage > 1) { %>
            <a
            href="?<%= new URLSearchParams({
                ...filters,
                page: pagination.currentPage - 1
            }).toString() %>"
            class="px-4 py-2 rounded-xl border"
            >
            قبلی
            </a>
        <% } %>

        <% if (pagination.currentPage < pagination.totalPages) { %>
            <a
            href="?<%= new URLSearchParams({
                ...filters,
                page: pagination.currentPage + 1
            }).toString() %>"
            class="px-4 py-2 rounded-xl border"
            >
            بعدی
            </a>
        <% } %>

        </div>



</div>

<script type="module" src="/statics/js/reservationList.js"></script>
